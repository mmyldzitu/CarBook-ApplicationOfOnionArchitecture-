@model List<ResultBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Marka Listesi</h4>
                    <p class="card-subtitle mb-4">
                       Araba Markaları İle İlgili Ekleme, Silme Güncelleme İşlemleri Yapabilirisiniz
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Marka</th>

                                    <th>Sil</th>

                                    <th>Güncelle</th>
                                    <th>Markaya Ait Araçlar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count = count + 1;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.brandName</td>

                                        <td><a href="/AdminBrand/DeleteBrand/@item.brandId" class="btn  btn-outline-danger">Sil</a></td>
                                        <td><a href="/AdminBrand/UpdateBrand/@item.brandId" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="/AdminBrand/UpdateBrand/@item.brandId" class="btn btn-outline-dark">Araçlar</a></td>



                                    </tr>

                                }


                            </tbody>
                        </table>
                        <br />
                        <a href="/AdminBrand/CreateBrand" class="btn btn-primary">Yeni Marka Girişi</a>

                    </div>

                </div>
                <!-- end card-body-->
            </div>
            <!-- end card -->

        </div>
        <!-- end col -->
        <!-- end col -->
    </div>
    <!-- end page title -->

</div>

