@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">Marka Güncelle </h4>
                    <p class="card-subtitle mb-4">Araçlar ile ilgili  marka güncelleyiniz.</p>

                    <form method="post" asp-action="UpdateBrand" asp-controller="AdminBrand">
                        <input type="hidden" asp-for="brandId" />
                        <div class="form-group">
                            <label for="exampleInputFeatureName">Marka</label>
                            <input asp-for="@Model.brandName" type="text" class="form-control" placeholder="Marka İsmini Giriniz" />
                        </div>

                        <button type="submit" class="btn btn-primary waves-effect waves-light">Marka Güncelle</button>
                    </form>

                </div> <!-- end card-body-->
            </div>

        </div>
    </div>
</div>