@model List<ResultCarWithBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Araba Listesi</h4>
                    <p class="card-subtitle mb-4">
                        Arabalarla İlgili Ekleme, Silme, Güncelleme ve Arama İşlemlerini Bu Sayfa Üzerinden Gerçekleştirebilirsiniz
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Marka</th>
                                    <th>Model</th>
                                    <th>Vites</th>
                                    <th>Km</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Detaylar</th>
                                    <th>Fiyat Bilgileri</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    count = count + 1;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Brand</td>
                                        <td>@item.Model</td>
                                        <td>@item.Transmission</td>
                                        <td>@item.Km</td>
                                        <td><a href="/AdminCar/DeleteCar/@item.CarId" class="btn  btn-outline-danger">Sil</a></td>
                                        <td><a href ="/AdminCar/UpdateCar/@item.CarId" class="btn btn-outline-success">Güncelle</a></td>
                                        
                                        <td><a href ="/CarList/Details/@item.CarId" class="btn btn-outline-dark"> Detaylar</a></td>
                                        <td><a href ="/CarList/Details/@item.CarId" class="btn btn-outline-warning"> Sitede Gör</a></td>
                                        <td><a href ="/CarList/Details/@item.CarId" class="btn btn-outline-warning"> Fiyat Bilgileri</a></td>
                                       
                                    </tr>
                                    
                                }
                                
                                
                            </tbody>
                        </table>
                        <a href="/AdminCar/Create" class="btn btn-primary">Yeni Araç</a>

                    </div>

                </div>
                <!-- end card-body-->
            </div>
            <!-- end card -->

        </div>
        <!-- end col -->


        <!-- end col -->
    </div>
    <!-- end page title -->

</div> <!-- container-fluid -->
