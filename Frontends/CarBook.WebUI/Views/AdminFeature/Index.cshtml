@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Özellik Listesi</h4>
                    <p class="card-subtitle mb-4">
                        Arabalarla İlgili Detay Özellikleri İçin Ekleme, Silme ve Güncelleme İşlemleri Yapabilirsiniz
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Özellik</th>
                                    
                                    <th>Sil</th>
                                    
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count = count + 1;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.FeatureName</td>
                                        
                                        <td><a href="/AdminFeature/DeleteFeature/@item.FeatureId" class="btn  btn-outline-danger">Sil</a></td>
                                        <td><a href="/AdminFeature/UpdateFeature/@item.FeatureId" class="btn btn-outline-success">Güncelle</a></td>

                                       

                                    </tr>

                                }


                            </tbody>
                        </table>
                        <br />
                        <a href="/AdminFeature/CreateFeature" class="btn btn-primary">Yeni Özellik Girişi</a>

                    </div>

                </div>
                <!-- end card-body-->
            </div>
            <!-- end card -->

        </div>
        <!-- end col -->
        <!-- end col -->
    </div>
    <!-- end page title -->

</div>

