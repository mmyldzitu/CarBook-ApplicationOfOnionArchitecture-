@model CreateFeatureDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">Yeni Özellik </h4>
                    <p class="card-subtitle mb-4">Araçlar ile ilgili  özellik ekleyiniz.</p>

                    <form method="post" asp-action="CreateFeature" asp-controller="AdminFeature">
                       
                        <div class="form-group">
                            <label for="exampleInputFeatureName">Özellik</label>
                            <input asp-for="@Model.FeatureName" type="text" class="form-control" placeholder="Özellik İsmini Giriniz" />
                        </div>
                        
                        <button type="submit" class="btn btn-primary waves-effect waves-light">Özellik Ekle</button>
                    </form>

                </div> <!-- end card-body-->
            </div>

        </div>
    </div>
</div>