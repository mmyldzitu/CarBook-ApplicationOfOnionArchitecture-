@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">Banner Güncelle </h4>
                    <p class="card-subtitle mb-4">Banner ile ilgili  Güncelleme Yapabilirisiniz.</p>

                    <form method="post" asp-action="UpdateBanner" asp-controller="AdminBanner">
                        <input type="hidden" asp-for="bannerId" />
                        <div class="form-group">
                            <label for="exampleInputFeatureName">Banner</label>
                            <input asp-for="@Model.title" type="text" class="form-control" placeholder="Banner İsmini Giriniz" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFeatureName">Açıklama</label>
                            <input asp-for="@Model.description" type="text" class="form-control" placeholder="Açıklama Giriniz" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFeatureName">Video Url</label>
                            <input asp-for="@Model.videUrl" type="text" class="form-control" placeholder="Video Url  Giriniz" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFeatureName">Video Açıklama</label>
                            <input asp-for="@Model.videoDescription" type="text" class="form-control" placeholder="Video Açıklaması Giriniz" />
                        </div>

                        <button type="submit" class="btn btn-primary waves-effect waves-light">Banner Güncelle</button>
                    </form>

                </div> <!-- end card-body-->
            </div>

        </div>
    </div>
</div>

