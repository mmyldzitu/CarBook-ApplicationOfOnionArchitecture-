@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hakkımızda Listesi</h4>
                    <p class="card-subtitle mb-4">
                        Ana Sayfada Bulunan Hakkımızda Kısmına Ait Bilgileri Burada Görebilir, Ekleme, Silme, Güncelleme Yapabilirisiniz. Yalnızca Bir Adet Veri Bulunması Önemli Bir Husustur!!
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>

                                    <th>Başlık</th>

                                    <th>Açıklama</th>

                                    <th>Görsel</th>

                                    
                                    <th>Sil</th>
                                    <th>Güncelle</th>

                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>

                                        <td>@item.title</td>
                                        <td>@item.description</td>

                                        <td>@item.imageUrl</td>
                                        

                                        <td><a href="/Admin/AdminAbout/DeleteAbout/@item.aboutId" class="btn  btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminAbout/UpdateAbout/@item.aboutId" class="btn btn-outline-success">Güncelle</a></td>
                                        



                                    </tr>

                                }


                            </tbody>
                        </table>
                        <br />
                        <a href="/Admin/AdminAbout/CreateAbout" class="btn btn-primary">Yeni Bilgi Girişi</a>

                    </div>

                </div>
                <!-- end card-body-->
            </div>
            <!-- end card -->

        </div>
        <!-- end col -->
        <!-- end col -->
    </div>
    <!-- end page title -->

</div>

