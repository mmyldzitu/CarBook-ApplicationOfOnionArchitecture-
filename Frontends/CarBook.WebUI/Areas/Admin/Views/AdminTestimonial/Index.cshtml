@model List<ResultTestimonialDto>
@{

    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Referanslar Listesi</h4>
                    <p class="card-subtitle mb-4">
                        Referanslar Listelenebilir, Silinebilir, Güncellenebilir ve Yeni Referans Eklenebilir.
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>

                                    <th>#</th>

                                    <th>İsim</th>
                                    <th>Ünvan</th>
                                    <th>Yorum</th>
                                    


                                    <th>Kaldır</th>
                                    <th>Güncelle</th>
                                    




                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;

                                    <tr>
                                        <td>@count</td>
                                        <td> <img width="50" height="50" style="margin-right:10px;border-radius:50%" src="@item.imageUrl" /> @item.name </td>
                                        <td> @item.title </td>
                                        <td> @item.comment </td>
                                        

                                        <td><a href="/Admin/AdminTestimonial/DeleteTestimonial/@item.id" class="btn  btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminTestimonial/UpdateTestimonial/@item.id" class="btn  btn-outline-dark">Güncelle</a></td>
                                        





                                    </tr>

                                }


                            </tbody>
                        </table>
                        <br />
                        <a href="/Admin/AdminTestimonial/CreateTestimonial/"class="btn btn-outline-primary">Yeni Referans</a>

                    </div>

                </div>
                <!-- end card-body-->
            </div>
            <!-- end card -->

        </div>
        <!-- end col -->
        <!-- end col -->
    </div>
    <!-- end page title -->

</div>