@model List<ResultAuthorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yazar Listesi</h4>
                    <p class="card-subtitle mb-4">
                       Yazarlara Ait Bilgiliri Görebilir, Ekleyebilir, Silebilir ve Güncelleyebilirisiniz
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>

                                    <th>#</th>

                                    <th>İsim Soyisim</th>

                                    
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Bloglar</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;

                                    <tr>
                                        <td>@count</td>
                                        <td><img src="@item.imageUrl" width="50" height="50" style="margin-right:10px;border-radius:50%" /> @item.authorName </td>

                                        <td><a href="/Admin/AdminAuthor/DeleteAuthor/@item.authorId" class="btn  btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminAuthor/UpdateAuthor/@item.authorId" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="#" class="btn btn-outline-success">Bloglar</a></td>




                                    </tr>

                                }


                            </tbody>
                        </table>
                        <br />
                        <a href="/Admin/AdminAuthor/CreateAuthor" class="btn btn-primary">Yeni Yazar</a>

                    </div>

                </div>
                <!-- end card-body-->
            </div>
            <!-- end card -->

        </div>
        <!-- end col -->
        <!-- end col -->
    </div>
    <!-- end page title -->

</div>

