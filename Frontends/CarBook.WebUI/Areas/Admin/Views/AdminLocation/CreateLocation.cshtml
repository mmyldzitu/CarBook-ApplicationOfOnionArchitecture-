@model CreateLocationDto
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">Yeni Lokasyon Ekleme</h4>
                    <p class="card-subtitle mb-4">Yeni Lokasyon Ekleyin</p>

                    <form method="post" asp-action="CreateLocation" asp-controller="AdminLocation">

                        <div class="form-group">
                            <label for="exampleInputBrandName">Lokasyon Adı</label>
                            <input asp-for="@Model.locationName" type="text" class="form-control"  />
                        </div>


                        <button type="submit" class="btn btn-primary waves-effect waves-light">Lokasyon Ekle</button>
                    </form>

                </div> <!-- end card-body-->
            </div>

        </div>
    </div>
</div>
