@model List<ResultLocationDto>
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Lokasyon Listesi</h4>
                    <p class="card-subtitle mb-4">
                        Araç teslim alma/ teslim etme Lokasyonları Listelenebilir, Silinebilir, Güncellenebilir ve Yeni Lokasyon Eklenebilir
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>

                                    <th>#</th>

                                    <th>Lokasyon</th>


                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Konumu Aç</th>



                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;

                                    <tr>
                                        <td>@count</td>
                                        <td> @item.locationName </td>

                                        <td><a href="/Admin/AdminLocation/DeleteLocation/@item.locationId" class="btn  btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminLocation/UpdateLocation/@item.locationId" class="btn btn-outline-success">Güncelle</a></td>





                                    </tr>

                                }


                            </tbody>
                        </table>
                        <br />
                        <a href="/Admin/AdminLocation/CreateLocation" class="btn btn-primary">Yeni Lokasyon</a>

                    </div>

                </div>
                <!-- end card-body-->
            </div>
            <!-- end card -->

        </div>
        <!-- end col -->
        <!-- end col -->
    </div>
    <!-- end page title -->

</div>