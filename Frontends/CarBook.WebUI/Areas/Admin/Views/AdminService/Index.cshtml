@model List<ResultServiceDto>
@{

    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hizmetler Listesi</h4>
                    <p class="card-subtitle mb-4">
                        Hizmetler Listelenebilir, Silinebilir, Güncellenebilir ve Yeni Hizmet Eklenebilir.
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>

                                    <th>#</th>

                                    <th>Başlık</th>
                                    <th>Açıklama</th>
                                    <th>İkon Url</th>


                                    <th>Kaldır</th>
                                    <th>Güncelle</th>





                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;

                                    <tr>
                                        <td>@count</td>
                                        <td> @item.Title </td>
                                        <td> @item.Description </td>
                                        <td> @item.IconUrl </td>
                                        

                                        <td><a href="/Admin/AdminService/DeleteService/@item.ServiceId" class="btn  btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminService/UpdateService/@item.ServiceId" class="btn  btn-outline-dark">Güncelle</a></td>






                                    </tr>

                                }


                            </tbody>
                        </table>
                        <br />
                        <a href="/Admin/AdminService/CreateService/" class="btn btn-outline-primary">Yeni Hizmet</a>

                    </div>

                </div>
                <!-- end card-body-->
            </div>
            <!-- end card -->

        </div>
        <!-- end col -->
        <!-- end col -->
    </div>
    <!-- end page title -->

</div>