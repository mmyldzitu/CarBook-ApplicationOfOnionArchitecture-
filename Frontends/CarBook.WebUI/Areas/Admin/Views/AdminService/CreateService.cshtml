@model CreateServiceDto
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">Yeni Hizmet Ekleme</h4>
                    <p class="card-subtitle mb-4">Yeni Hizmet Ekleyin</p>

                    <form method="post" asp-action="CreateService" asp-controller="AdminService">

                        <div class="form-group">
                            <label for="exampleInputBrandName">Başlık</label>
                            <input asp-for="@Model.Title" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputBrandName">Açıklama</label>
                            <input asp-for="@Model.Description" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputBrandName">İkon Url</label>
                            <input asp-for="@Model.IconUrl" type="text" class="form-control" />
                        </div>


                        <button type="submit" class="btn btn-primary waves-effect waves-light">Hizmet Ekle</button>
                    </form>

                </div> <!-- end card-body-->
            </div>

        </div>
    </div>
</div>
