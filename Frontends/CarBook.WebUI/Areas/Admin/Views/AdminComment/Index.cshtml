@model CommentByBlogIdViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"> <span style="font-weight:bold">@Model.blogName</span> Bloğuna Ait Yorumlar Listesi</h4>
                    <p class="card-subtitle mb-4">
                        Bloğa Ait Yorumları Listeleyebilir, Dilerseniz Yorumu Kaldırabilirsiniz..
                    </p>
                    @foreach( var item in Model.Comments!)
                    {
                        count++;
                        <div class="col-md-12">
                            <div class="card">
                                <h5 class="card-header">Yorum @count --- @item.createDate.ToShortDateString() </h5>
                                <div class="card-body">
                                    <h4 class="card-title">@item.name</h4>
                                    <p class="card-text">
                                       @item.description
                                    </p>
                                    <a href="#" class="btn btn-primary waves-effect waves-light">Yorumu Kaldır</a>
                                </div>
                            </div>
                        </div>
                    }
                    

                </div>
                <!-- end card-body-->
            </div>
            <!-- end card -->

        </div>
        <!-- end col -->
        <!-- end col -->
    </div>
    <!-- end page title -->

</div>

