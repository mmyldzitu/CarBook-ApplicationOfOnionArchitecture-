@model List<ResultPricingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid">
    
    <!-- start page title -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Ödeme Türü Listesi</h4>
                    <p class="card-subtitle mb-4">
                        Ödemelere Ait Opsiyonları Listeleyebilir, Silebilir, Ekleme ve Güncelleme Yapabilirsiniz
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>

                                    <th>#</th>

                                    <th>Opsiyon</th>


                                    <th>Sil</th>
                                    <th>Güncelle</th>



                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;

                                    <tr>
                                        <td>@count</td>
                                        <td> @item.pricingName </td>

                                        <td><a href="/Admin/AdminPricing/DeletePricing/@item.pricingId" class="btn  btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminPricing/UpdatePricing/@item.pricingId" class="btn btn-outline-success">Güncelle</a></td>





                                    </tr>

                                }


                            </tbody>
                        </table>
                        <br />
                        <a href="/Admin/AdminPricing/CreatePricing" class="btn btn-primary">Yeni Opsiyon</a>

                    </div>

                </div>
                <!-- end card-body-->
            </div>
            <!-- end card -->

        </div>
        <!-- end col -->
        <!-- end col -->
    </div>
    <!-- end page title -->

</div>