@model List<ResultSocialMediaDto>
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sosyal Medya Linkleri Listesi</h4>
                    <p class="card-subtitle mb-4">
                        Sosyal Medya Linkleri Listelenebilir, Silinebilir, Güncellenebilir ve Yeni Link Eklenebilir
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>

                                    <th>#</th>

                                    <th>İsim</th>
                                    <th>Url</th>
                                    <th>İkon Url</th>


                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Aç</th>




                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;

                                    <tr>
                                        <td>@count</td>
                                        <td> @item.name </td>
                                        <td> @item.url </td>
                                        <td> @item.iconUrl </td>

                                        <td><a href="/Admin/AdminSocialMedia/DeleteSocialMedia/@item.id" class="btn  btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.id" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="@item.url" class="btn btn-outline-success">Aç</a></td>






                                    </tr>

                                }


                            </tbody>
                        </table>
                        <br />
                        <a href="/Admin/AdminSocialMedia/CreateSocialMedia" class="btn btn-primary">Yeni Link</a>

                    </div>

                </div>
                <!-- end card-body-->
            </div>
            <!-- end card -->

        </div>
        <!-- end col -->
        <!-- end col -->
    </div>
    <!-- end page title -->

</div>